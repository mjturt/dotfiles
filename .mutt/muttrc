# vim: filetype=neomuttrc
#┃ ~/.mutt/muttrc
#┣━━━━━━━━━━━━━━━
#┃ mjturt

### Basic settings
set send_charset="utf-8"
set assumed_charset="iso-8859-1"
set editor="nvim"
set menu_scroll=yes
set simple_search="~f %s | ~C %s | ~s %s"
#source ~/.mutt/aliases
set query_command = "abook --mutt-query '%s'"
set rfc2047_parameters = yes
set sleep_time = 0
set markers = no
set mark_old = yes
set wait_key = no

### Receiving
set mail_check=0
set imap_keepalive=500
unset imap_passive
set mbox_type=Maildir
set folder=~/.local/share/mail
source ~/.mutt/mailboxes
set imap_check_subscribed
source ~/.mutt/lists

### Sending
set fast_reply
set forward_format = "Fwd: %s"
set forward_decode
set forward_quote
set reverse_name
set include
set sig_dashes
set edit_headers
set fast_reply
set signature=~/.mutt/signatures/default
source ~/.mutt/gpg.rc
set sig_on_top = yes

### Attachments
set mailcap_path=~/.mutt/mailcap
auto_view text/html
auto_view application/pgp-encrypted
set fcc_attach
set mime_forward = yes

### UI and colors
source ~/.mutt/colors/mjt.mutt
## Index
set sort_aux=last-date-received
set sort=reverse-threads
set strict_threads=yes
set date_format ="%d.%m.%y » %H:%M"
set index_format="%2C %Z %?X?A& ? %D %-15.15F %s (%-4.4c)"
set status_format = "──[ Dir: %f ]─────[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]─────%>─%?p?( %p postponed )?───"
unset collapse_unread
set read_inc = 1
set time_inc = 300
spam "X-Spam-Score: ([0-9\\.]+).*" "SA: %1"
## Header
ignore *
unignore From To Cc Bcc Date Subject
unhdr_order *
hdr_order From: To: Cc: Bcc: Date: Subject:
## Pager
set pager_format = " %C - %[%H:%M] %.20v, %s%* %?H? [%H] ?"
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set tilde
unset markers
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html
## Sidebar
set sidebar_visible = yes
set sidebar_width = 20
set sidebar_folder_indent = yes
set sidebar_short_path = yes

### Accounts
set spoolfile = "+utu/INBOX"
source ~/.mutt/accounts/utu/account
folder-hook ~/.local/share/mail/utu/* 'source ~/.mutt/accounts/utu/account'
folder-hook ~/.local/share/mail/gmail/* 'source ~/.mutt/accounts/gmail/account'
folder-hook ~/.local/share/mail/lvs/* 'source ~/.mutt/accounts/lvs/account'

### Keybindings
source ~/.mutt/keybindings
