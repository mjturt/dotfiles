#!/bin/sh

lock_r5() {
   i3lock -c 463c65
}

lock_thinkpad() {
   i3lock-fancy -f DS\-Terminal
}

if [[ $2 == "r5" ]]; then
   case "$1" in
   lock)
      lock_r5
      ;;
   exit)
      i3-msg exit
      ;;
   *)
      echo "Usage: $0 {lock|exit} r5"
      exit 2
   esac
elif [[ $2 == "thinkpad" ]]; then
   case "$1" in
   lock)
      lock_thinkpad
      ;;
   logout)
      i3-msg exit
      ;;
   shutdown) 
      systemctl poweroff
      ;;
   reboot)
      systemctl reboot
      ;;
   hibernate)
      lock_thinkpad && systemctl hibernate
      ;;
   *)
      echo "Usage: $0 {lock|logout|reboot|shutdown|hibernate} thinkpad"
      exit 2
   esac
fi

exit 0
