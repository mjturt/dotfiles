# ~/.config/zathura/zathurarc
# ---------------------------
# mjturt

# Basic settings

set zoom-step 20
set scroll-step 80
set selection-clipboard clipboard
set incremental-search true
set recolor "true"
set recolor-keephue "false"
set font "ShureTechMono Nerd Font Mono 10"

# Keybindings
# Unfortunately looks like Zathura is the only application that I encoutered where finnish 
# character Ã–(or keysym) is not mappable. Still best PDF-viewer so using P instead.

map j scroll left
map k scroll down
map l scroll up
map p scroll right

map J navigate previous
map P navigate next
map K zoom out
map L zoom in

map D toggle_page_mode
map e scroll half-up
map d scroll half-down
map [normal] ,p1 set "pages-per-row 1"
map [normal] ,p2 set "pages-per-row 2"

# Colors

set default-bg                  "#000000" #00
set default-fg                  "#1f1b3f" #01

set statusbar-fg                "#bd93f9" #04
set statusbar-bg                "#282a36" #01

set inputbar-bg                 "#dbe2ec" #00
set inputbar-fg                 "#2a4f81" #02

set notification-error-bg       "#0e868b" #08
set notification-error-fg       "#1f1b3f" #00

set notification-warning-bg     "#0188aa" #08
set notification-warning-fg     "#1f1b3f" #00

set highlight-color             "#2a4f81" #0A
set highlight-active-color      "#1f1b3f" #0D

set completion-highlight-fg     "#1f1b3f"  #02
set completion-highlight-bg     "#8b09a8" #0C

set completion-bg               "#e0eaf9" #02
set completion-fg               "#1f1b3f" #0C

set notification-bg             "#ee8109" #0B
set notification-fg             "#1f1b3f" #00

set recolor-lightcolor          "#b3bf96" #00
set recolor-darkcolor           "#0e1713" #06
