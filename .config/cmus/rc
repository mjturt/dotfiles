#┃ ~/.config/cmus/rc
#┣━━━━━━━━━━━━━━━━━━
#┃ mjturt

### Basic options
set mouse=true

### Alsa
set output_plugin=alsa
set dsp.alsa.device=default
set mixer.alsa.device=default
set mixer.alsa.channel=Master

### Keybindings
bind -f common j seek -5
bind -f common k win-down
bind -f common l win-up
bind -f common p seek +5
bind -f common d win-half-page-down
bind -f common u win-half-page-up

### Notifications
set status_display_program=/home/mjt/.config/cmus/scripts/CmusNotify

### cmus theme by Prakhar
set color_cmdline_bg=234
set color_cmdline_fg=255
set color_error=81
set color_info=81
set color_separator=234
set color_statusline_bg=235
set color_statusline_fg=208
set color_titleline_bg=235
set color_titleline_fg=184
set color_win_bg=234
set color_win_fg=255
set color_win_cur=184
set color_win_dir=81
set color_win_title_bg=235
set color_win_title_fg=81
set color_win_sel_bg=208
set color_win_sel_fg=235
set color_win_inactive_cur_sel_bg=236
set color_win_inactive_cur_sel_fg=208
set color_win_cur_sel_bg=236
set color_win_cur_sel_fg=184
set color_win_inactive_sel_bg=236
set color_win_inactive_sel_fg=208
